{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Fluxy Repacks",
  "version": "0.1.0",
  "identifier": "com.fluxyrepacks.app",
"build": {
  "beforeDevCommand": "",
  "devUrl": null,
  "beforeBuildCommand": "",
  "frontendDist": "../src"
},
  "app": {
    "windows": [
      {
        "title": "Fluxy Repacks",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Game",
    "shortDescription": "Fluxy Repacks v0.1",
    "longDescription": "Application native pour parcourir et télécharger les jeux sur Fluxy Repacks",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "languages": ["French"],
        "displayLanguageSelector": false
      }
    }
  },
"plugins": {
  "shell": {
    "open": true
  }
}

}